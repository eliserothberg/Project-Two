<!--
Here is the main HTML where handlebars will render to
 -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="stylesheet" href="/assets/css/style.css" type="text/css" />
		<title>E-minder</title>
	</head>
	<body>
		<div class="logging">
			<p>
				{{#unless logged_in}}
					<div id="regUser"><a href="/users/sign-in">Sign In</a></div>
					<div id="newUser"><a href="/users/new">Sign Up</a></div>
				{{/unless}}

				{{#if logged_in}}
					Welcome {{email}}! <br>
					<a href="/users/sign-out">Sign Out</a>
				{{/if}}
			</p>
		</div>
	{{{ body }}}
	</body>
</HTML>
